{
  "dashboard": {
    "title": "MasterChief Platform Overview",
    "tags": ["masterchief", "devops", "platform"],
    "timezone": "browser",
    "panels": [
      {
        "title": "Platform Health",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"masterchief-platform\"}",
            "legendFormat": "Platform Status"
          }
        ],
        "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 }
      },
      {
        "title": "Active Deployments",
        "type": "graph",
        "targets": [
          {
            "expr": "masterchief_active_deployments",
            "legendFormat": "Deployments"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 }
      },
      {
        "title": "Module Load Time",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(masterchief_module_load_duration_seconds[5m])",
            "legendFormat": "{{ module }}"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 4 }
      },
      {
        "title": "Event Bus Throughput",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(masterchief_events_total[5m])",
            "legendFormat": "{{ event_type }}"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 }
      },
      {
        "title": "API Response Time",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(masterchief_api_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p95"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 12 }
      }
    ],
    "refresh": "10s",
    "schemaVersion": 30,
    "version": 1
  }
}
